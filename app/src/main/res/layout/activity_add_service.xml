<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Request Form"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Please fill all required fields"
                        android:textSize="12sp"
                        android:textColor="@color/gray_icon"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="12dp" />

                    <!-- Customer Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Customer Name *"
                        app:startIconDrawable="@drawable/ic_person_24dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mobile Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number *"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Information"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="12dp" />

                    <!-- Vehicle Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_vehicle_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Vehicle Number *"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_vehicle_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Vehicle Type Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Type *"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/black" />

                        <RadioGroup
                            android:id="@+id/rg_vehicle_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start">

                            <RadioButton
                                android:id="@+id/rb_bike"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bike"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:layout_marginEnd="8dp" />

                            <RadioButton
                                android:id="@+id/rb_car"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Car"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:layout_marginStart="8dp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Service Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="12dp" />

                    <!-- Date and Time in Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginBottom="12dp">

                        <!-- Preferred Date -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_service_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginEnd="8dp"
                            android:hint="Service Date *"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_service_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Preferred Time -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_service_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginStart="8dp"
                            android:hint="Service Time *"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_service_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Notes/Description -->
                    <!-- Work Input Section -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_work_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Add Work Details"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="12dp" />

                            <!-- Work Name Input -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_work_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                app:boxStrokeColor="@color/primary_color"
                                app:hintTextColor="@color/primary_color"
                                app:startIconTint="@color/primary_color"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_work_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Work Name (e.g., Oil Change)"
                                    android:inputType="textCapWords"
                                    android:maxLength="50"
                                    android:padding="12dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Work Cost Input -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_work_cost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:boxStrokeColor="@color/primary_color"
                                app:hintTextColor="@color/primary_color"
                                app:startIconTint="@color/primary_color"
                                app:prefixText="₹ "
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_work_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Work Cost"
                                    android:inputType="numberDecimal"
                                    android:maxLength="6"
                                    android:padding="12dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Add Work Button -->
                            <Button
                                android:id="@+id/btn_add_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Add Work"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/primary_color"
                                style="@style/Widget.MaterialComponents.Button" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Work List Section -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_work_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Work List"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <Button
                                    android:id="@+id/btn_clear_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:text="Clear All"
                                    android:textSize="12sp"
                                    android:textColor="@color/black"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                            </LinearLayout>

                            <!-- Work Items Container -->
                            <LinearLayout
                                android:id="@+id/ll_work_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />

                            <!-- Total Cost -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                android:layout_marginVertical="8dp" />

                            <TextView
                                android:id="@+id/tv_total_cost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total: ₹0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:gravity="end" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vehicle Images Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Images (Optional)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/primary_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add up to 4 images of your vehicle"
                        android:textSize="10sp"
                        android:textColor="@color/gray_icon"
                        android:layout_marginBottom="12dp" />

                    <!-- Images Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginBottom="12dp">

                        <!-- Image 1 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image_1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_image_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="@color/light_gray" />

                                <ImageView
                                    android:id="@+id/iv_remove_1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="3dp"
                                    android:padding="3dp"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Image 2 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image_2"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_image_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="@color/light_gray" />

                                <ImageView
                                    android:id="@+id/iv_remove_2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="3dp"
                                    android:padding="3dp"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Image 3 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image_3"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_image_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="@color/light_gray" />

                                <ImageView
                                    android:id="@+id/iv_remove_3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="3dp"
                                    android:padding="3dp"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Image 4 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_image_4"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/iv_image_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="@color/light_gray" />

                                <ImageView
                                    android:id="@+id/iv_remove_4"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="3dp"
                                    android:padding="3dp"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                    </GridLayout>

                    <!-- Camera/Gallery Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btn_camera"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="Camera"
                            android:textSize="12sp"
                            android:padding="8dp"
                            android:drawablePadding="6dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btn_gallery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="Gallery"
                            android:textSize="12sp"
                            android:padding="8dp"
                            android:drawablePadding="6dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Submit Service Request"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:elevation="2dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
